{
  "name": "tarkov-casino",
  "description": "Tarkov-themed casino gaming website with virtual currency games",
  "type": "docker",
  "dockerfile": "Dockerfile",
  "port": 3000,
  "healthcheck": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3,
    "start_period": 30
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "LOG_LEVEL": "info",
    "ENABLE_REQUEST_LOGGING": "true",
    "ENABLE_GAME_LOGGING": "true",
    "ENABLE_SECURITY_LOGGING": "true",
    "METRICS_ENABLED": "true",
    "REQUEST_TIMEOUT": "30000",
    "RATE_LIMIT_WINDOW": "900000",
    "RATE_LIMIT_MAX": "100",
    "STARTING_BALANCE": "10000",
    "DAILY_BONUS": "1000"
  },
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile",
    "args": {
      "VITE_SUPABASE_URL": "${SUPABASE_URL}",
      "VITE_SUPABASE_ANON_KEY": "${SUPABASE_ANON_KEY}",
      "VITE_API_URL": "/api"
    }
  },
  "deploy": {
    "restart_policy": "unless-stopped",
    "resources": {
      "limits": {
        "memory": "1g",
        "cpus": "1.0"
      },
      "reservations": {
        "memory": "512m",
        "cpus": "0.5"
      }
    }
  },
  "monitoring": {
    "endpoints": [
      "/api/health",
      "/api/health/detailed",
      "/api/ready",
      "/api/live",
      "/api/metrics"
    ]
  }
}