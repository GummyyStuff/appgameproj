{
  "name": "tarkov-casino",
  "description": "Tarkov-themed casino gaming website with virtual currency games",
  "type": "docker",
  "dockerfile": "Dockerfile",
  "port": 3000,
  "healthcheck": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3,
    "start_period": 30
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "LOG_LEVEL": "info",
    "ENABLE_REQUEST_LOGGING": "true",
    "ENABLE_GAME_LOGGING": "true",
    "ENABLE_SECURITY_LOGGING": "true",
    "METRICS_ENABLED": "true",
    "REQUEST_TIMEOUT": "30000",
    "RATE_LIMIT_WINDOW": "900000",
    "RATE_LIMIT_MAX": "100",
    "STARTING_BALANCE": "10000",
    "DAILY_BONUS": "1000",
    "REDIS_ENABLED": "${REDIS_ENABLED}",
    "REDIS_HOST": "${REDIS_HOST}",
    "REDIS_PORT": "${REDIS_PORT}",
    "REDIS_PASSWORD": "${REDIS_PASSWORD}",
    "REDIS_DB": "${REDIS_DB}",
    "CACHE_USER_PROFILE_TTL": "${CACHE_USER_PROFILE_TTL}",
    "CACHE_BALANCE_TTL": "${CACHE_BALANCE_TTL}",
    "CACHE_LEADERBOARD_TTL": "${CACHE_LEADERBOARD_TTL}",
    "CACHE_STATS_TTL": "${CACHE_STATS_TTL}",
    "APPWRITE_ENDPOINT": "${APPWRITE_ENDPOINT}",
    "APPWRITE_PROJECT_ID": "${APPWRITE_PROJECT_ID}",
    "APPWRITE_API_KEY": "${APPWRITE_API_KEY}",
    "APPWRITE_DATABASE_ID": "${APPWRITE_DATABASE_ID}",
    "VITE_API_URL": "${VITE_API_URL}",
    "VITE_APPWRITE_ENDPOINT": "${VITE_APPWRITE_ENDPOINT}",
    "VITE_APPWRITE_PROJECT_ID": "${VITE_APPWRITE_PROJECT_ID}",
    "VITE_APPWRITE_DATABASE_ID": "${VITE_APPWRITE_DATABASE_ID}",
    "SENTRY_DSN": "${SENTRY_DSN}",
    "VITE_SENTRY_DSN": "${VITE_SENTRY_DSN}"
  },
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile",
    "args": {
      "VITE_API_URL": "${VITE_API_URL}",
      "VITE_APPWRITE_ENDPOINT": "${VITE_APPWRITE_ENDPOINT}",
      "VITE_APPWRITE_PROJECT_ID": "${VITE_APPWRITE_PROJECT_ID}",
      "VITE_APPWRITE_DATABASE_ID": "${VITE_APPWRITE_DATABASE_ID}",
      "VITE_SENTRY_DSN": "${VITE_SENTRY_DSN}"
    }
  },
  "deploy": {
    "restart_policy": "unless-stopped",
    "resources": {
      "limits": {
        "memory": "1g",
        "cpus": "1.0"
      },
      "reservations": {
        "memory": "512m",
        "cpus": "0.5"
      }
    }
  },
  "monitoring": {
    "endpoints": [
      "/api/health",
      "/api/health/detailed",
      "/api/ready",
      "/api/live",
      "/api/metrics"
    ]
  }
}