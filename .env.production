# Production Environment Variables

# Supabase Configuration (HTTPS endpoints for production)
SUPABASE_URL=https://your-supabase-project-url.supabase.co
SUPABASE_ANON_KEY=your_production_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_key_here

# Application Configuration
PORT=3000
NODE_ENV=production
JWT_SECRET=your_production_jwt_secret_here

# Game Configuration
STARTING_BALANCE=10000
DAILY_BONUS=1000

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_GAME_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring Configuration
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true