{
  "name": "@tarkov-casino/frontend",
  "version": "1.0.0",
  "description": "Frontend React app for Tarkov Casino",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test src/components src/hooks src/utils",
    "test:integration": "bun test src/test-utils/integration",
    "test:e2e": "bun test src/test-utils/e2e-tests.test.ts",
    "test:components": "bun test src/components",
    "test:hooks": "bun test src/hooks",
    "test:auth": "bun test src/components/auth",
    "test:games": "bun test src/components/games",
    "test:ui": "bun test src/components/ui",
    "test:performance": "bun test src/utils/__tests__/cache.test.ts src/utils/__tests__/lazy-loading.test.tsx",
    "test:ci": "bun test --coverage",
    "analyze": "vite build --mode analyze",
    "bundle-analyzer": "npx vite-bundle-analyzer dist"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-query": "^5.89.0",
    "appwrite": "^21.1.0",
    "framer-motion": "^12.23.16",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "recharts": "^3.2.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^18.0.1",
    "@tailwindcss/postcss": "^4.1.13",
