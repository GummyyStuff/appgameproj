    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^18.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  }
