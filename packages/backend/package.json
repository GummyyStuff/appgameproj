{
  "name": "@tarkov-casino/backend",
  "version": "1.0.0",
  "description": "Backend API for Tarkov Casino",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun --bytecode --minify --sourcemap --external node-appwrite --external pg --external socket.io --external hono --external zod --external hono-rate-limiter",
    "build:dev": "bun build src/index.ts --outdir ./dist --target bun --external node-appwrite --external pg --external socket.io --external hono --external zod --external hono-rate-limiter",
    "build:standalone": "bun build --compile --minify --sourcemap --bytecode src/index.ts --outfile ../../tarkov-casino-server",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test --test-name-pattern='.*\\.test\\.ts$'",
    "test:integration": "bun test src/integration/",
    "test:performance": "bun test src/test-utils/performance.test.ts",
    "test:fairness": "bun test src/test-utils/game-fairness.test.ts",
    "test:game-engine": "bun test src/services/game-engine/",
    "test:api": "bun test src/routes/",
    "test:database": "bun test src/services/database.test.ts src/database/database.test.ts",
    "test:currency": "bun test src/services/currency.test.ts src/integration/currency-api.test.ts",
    "test:statistics": "bun test src/services/statistics.test.ts src/services/statistics-integration.test.ts",
    "test:ci": "bun test --coverage",
    "db:setup": "bun run src/database/setup.ts",
    "db:setup-with-seed": "bun run src/database/setup.ts --seed",
    "db:verify": "bun run src/database/setup.ts --verify",
    "db:test-connection": "bun run src/scripts/test-connection.ts",
    "db:populate-items": "bun run src/scripts/populate-global-item-pool.ts",
    "db:cleanup-pools": "bun run src/scripts/cleanup-case-item-pools.ts",
    "db:test-items": "bun run src/scripts/test-global-item-pool.ts"
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "hono": "catalog:default",
    "hono-rate-limiter": "^0.4.2",
    "node-appwrite": "catalog:default",
    "pg": "^8.16.3",
    "socket.io": "catalog:default",
    "zod": "catalog:default"
  },
  "devDependencies": {
    "@types/bun": "catalog:default",
    "typescript": "catalog:default"
  }
}
