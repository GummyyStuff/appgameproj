{
  "name": "tarkov-casino",
  "version": "1.0.0",
  "description": "Tarkov-themed casino gaming website",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --watch index.ts",
    "dev:all": "bun --filter '*' dev",
    "build": "bun build index.ts --outdir ./dist",
    "build:all": "bun --filter '*' build",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:all": "bun --filter '*' test",
    "test:coverage": "bun test --coverage",
    "benchmark": "bun run scripts/benchmark-bun.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "deploy:prepare": "./scripts/deploy.sh",
    "deploy:validate": "./scripts/validate-production.sh",
    "health:check": "./scripts/health-check.sh",
    "health:check:prod": "./scripts/health-check.sh -u https://your-domain.com",
    "docker:build": "./scripts/deploy.sh build",
    "docker:test": "./scripts/deploy.sh test"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.0.0",
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "node-appwrite": "11.0.0"
  }
}
