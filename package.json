{
  "name": "tarkov-casino",
  "version": "1.0.0",
  "description": "Tarkov-themed casino gaming website",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "catalogs": {
    "default": {
      "typescript": "^5.9.2",
      "@types/bun": "latest",
      "appwrite": "^18.0.0",
      "node-appwrite": "^17.2.0",
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "@types/react": "^19.1.13",
      "@types/react-dom": "^19.1.9",
      "hono": "^4.9.8",
      "zod": "^4.1.11",
      "@testing-library/react": "^16.3.0",
      "@testing-library/jest-dom": "^6.8.0",
      "happy-dom": "^18.0.1",
      "@happy-dom/global-registrator": "^18.0.1"
    }
  },
  "scripts": {
    "dev": "bun run build:frontend:dev && bun run --filter @tarkov-casino/backend dev",
    "dev:all": "bun --filter '*' dev",
    "build": "bun run build:frontend && bun run build:backend",
    "build:frontend": "cd packages/frontend && bun run build",
    "build:frontend:dev": "cd packages/frontend && bun run build:dev",
    "build:backend": "cd packages/backend && bun run build",
    "build:all": "bun --filter '*' build",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:all": "bun --filter '*' test",
    "test:coverage": "bun test --coverage",
    "test:balance": "cd packages/backend && bun run test:balance",
    "test:constraints": "cd packages/backend && bun run test:constraints",
    "benchmark": "bun run scripts/benchmark.ts",
    "benchmark:old": "bun run scripts/benchmark-bun.ts",
    "analyze": "bun run scripts/analyze-bundle.ts",
    "perf": "bun run benchmark && bun run analyze",
    "db:setup-indexes": "bun run scripts/setup-indexes.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "deploy:prepare": "./scripts/deploy.sh",
    "deploy:validate": "./scripts/validate-production.sh",
    "deploy:verify-balance": "bun run test:balance",
    "health:check": "./scripts/health-check.sh",
    "health:check:prod": "./scripts/health-check.sh -u https://your-domain.com",
    "docker:build": "./scripts/deploy.sh build",
    "docker:test": "./scripts/deploy.sh test"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "catalog:default",
    "@types/bun": "catalog:default",
    "typescript": "catalog:default"
  },
  "peerDependencies": {
    "typescript": "catalog:default"
  },
  "dependencies": {
    "node-appwrite": "catalog:default"
  }
}
